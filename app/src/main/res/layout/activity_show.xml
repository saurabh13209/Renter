<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twelo.renter.ShowActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/app_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_image">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_name"
                    style="@style/enter_font"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Saurabh Agrawal " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/show_phone"
                        style="@style/enter_font"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="9935436083" />

                    <ImageButton
                        android:id="@+id/show_call"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/sym_action_call" />
                </LinearLayout>

                <TextView
                    android:id="@+id/show_address"
                    style="@style/enter_font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Deewan bazar new colony gorakhpur " />

                <TextView
                    android:id="@+id/show_trade"
                    style="@style/enter_font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C.S" />

                <TextView
                    android:id="@+id/show_year"
                    style="@style/enter_font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="First year" />

                <TextView
                    android:id="@+id/show_room_num"
                    style="@style/enter_font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Room 1" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
